@{
    ViewData["Title"] = "Home Page";
}
@model makeStr

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {
  font-family: Arial;
  color: white;
}

.split {
  height: 100%;
  width: 50%;
  position: fixed;
  z-index: 1;
  top: 0;
  overflow-x: hidden;
  padding-top: 20px;
}

.left {
  left: 0;
  background-color: rgb(20, 20, 31);

}

.right {
  right: 0;
  background-color: rgb(52, 52, 76);
}

.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.centered img {
  width: 150px;
  border-radius: 50%;
}
</style>
</head>
<body>

<div class="split left">
  <div class="centered">
    <h1>Source Code</h1>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @Html.TextArea("StudentName",null,new { cols = "50", rows = "30" });
    <input type="submit" value="Submit" />
}
  </div>
</div>

<div class="split right">
  <div class="centered">
    <h2>Output</h2>

   @Html.TextAreaFor(m => m.Name, new { cols = "50", rows = "30",@readonly="readonly" })
 
</body>
</html> 
